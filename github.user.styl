		.Overlay {
			normal-colors();
			brd();
			height: unset !important;
			dropfade();

			&-backdrop {
				&--side {
					background-color: transparent;
				}
				for i in left right {
					&--placement-{i} {
						{i}: var(--base-size-16);
					}
				}
			}
		}
	}
	.search-input {
		width: unset;
	}
	.application-main {
		margin-top: var(--header-h);
	}
	#repository-container-header {
		bg(2);
		margin-top: calc(var(--header-h) * -1);

