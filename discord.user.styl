	}
	.membersWrap::after {
		background-color: transparent $i;
		-webkit-mask: none $i;
	}

	/**
	 * Popup
	**/
	// Global
	.root.fullscreenOnMobile {
		brd();
		shd(big);

		.message {
			bg(2);
			brd();
			shd(big);
		}
	}
	.footerSeparator {
		brd(top);
		shd(0);
	}
	.menu, .userPopoutOuter {
		brd();
	}
	.userPopoutInner,
	.userPopoutInner::before,
	.roundedBanner,
	.profileBadges,
	.overlayBackground {
		brd(0);
	}

	// Recent mentions
	[aria-label="Recent Mentions"] {
		.tab:last-child,
		.scrollingFooterWrap {
			display: none;
		}
		.channelHeader {
			position: unset;
		}
		& > .header {
			z-index: 1;
		}
		.tab.active {
			background-color: transparent $i;
			pad(0);
			mar(0);
			height: unset;
			replace-text('Recent Mentions', header-primary);
		}
	}

	// Modals
	$qs-scroller = '[aria-label="Results"]'

	#app-mount > .popouts > div,
	[id^="popout"], // recent mentions, etc.
	.menu {
		dropfade();
	}
	.backdrop {
		opacity: 0 $i;
	}

	.quickswitcher {
		pad(0);
		brd();
		shd(big);
		dropfade();

		.input {
			lnh();
			text-overflow: ellipsis;
			pad();
			border-radius: var(--border-radius);
			shd(0);
			height: unset;

			& + {$qs-scroller} {
				bg();
				brd(top);
				z-index: 1;
			}
	
			&:focus + {$qs-scroller} {
				border-top-color: var(--hl) $i;
				box-shadow: 0 calc(var(--border-width) * -1) var(--hl);
			}
		}

		{$qs-scroller} {
			border-radius: 0 0 var(--border-radius) var(--border-radius);
			mar(0);
		}
		.content {
			height: auto $i;

			&Default {
				pad(0);

				&, .header {
					line-height: unset;
					flex();
				}
			}

			{$qs-scroller} > ^[1..-1] > :first-child {
				margin-top: calc(var(--pad) * -1);
			}
		}
		.header {
			normalise-header(false);
			mar(left);
			mar(right);
			width: 100%;
		}

		.result {
			border-radius: 0;
			height: unset;

			& > .contentDefault {
				lnh();
				pad();
				height: unset;
			}

			.note {
				text-transform: unset;
				mar(top, 0);
			}
			.miscContainer {
				opacity: 1;
			}

			&[aria-selected="true"] {
				background-color: var(--hl);

				* {
					color: var(--hl-fg);
				}
			}

			&[aria-selected="false"] .contentUnread svg {
				color: var(--header-primary);
			}
		}

		[style="height: 15px;"] {
			display: none;
		}
	}

	.tabBar {
		height: unset;

		& > div {
			pad();
			brd(0);
			mar(0);

			&[aria-selected="true"] {
				hl();
			}
		}

		&Container {
			brd(bottom);
		}
	}

	.downloadLink { // fix for "open original"
		color: var(--text-link) $i;
		opacity: 1;

		&:not(:hover) {
			text-decoration: none;
		}
	}

	/**
	 * Chat
	**/
	// Custom avatar rounding
	.avatar > .wrapper,
	.avatarHintInner,
	.replyAvatar,
	.avatar {
		border-radius: var(--avatar-border-radius) $i;
	}
	[mask^="url(#svg-mask-avatar-status-mobile"],
	[mask^="url(#svg-mask-avatar-status-round"],
	[mask="url(#svg-mask-avatar-default)"],
	.avatar > .mask > foreignObject {
		mask: none;
		border-radius: var(--avatar-border-radius);
	}
	.avatarHoverTarget {
		border-width: var(--avatar-stroke-size);
	}
	[mask^="url(#svg-mask-status"]:not([mask$="mobile)"]),
	.avatar rect {
		rx: 50%; ry: 50%;
		stroke: var(--background-floating);
		stroke-width: var(--avatar-stroke-size);

		.userPopout & {
			x: 64; y: 64;
			stroke-width: calc(var(--avatar-stroke-size) * 1.5);
		}

		[aria-label="User Profile Modal"] & {
			x: 98; y: 98;
			stroke-width: calc(var(--avatar-stroke-size) * 2);
		}
	}

	// Avatar status border
	if (avatar-status-border) {
		.avatar, .avatar > .wrapper {
			// Size
			.privateChannels &,
			.peopleColumn &,
			.members &,
			.panels & {
				--avatar-border-size: 2px;
			}
			[aria-modal] &,
			.accountProfileCard & {
				--avatar-border-size: 6px;
			}

			// Color
			--avatar-border-color: var(--text-muted);
			&[aria-label$="mobile"]		{ --avatar-border-color: var(--brand-experiment); }
			&[aria-label$="Online"]		{ --avatar-border-color: var(--text-positive); }
			&[aria-label$="Idle"]			{ --avatar-border-color: var(--text-warning); }
			&[aria-label$="Disturb"]	{ --avatar-border-color: var(--text-danger); }

			// Border
			border: var(--avatar-border-size) solid var(--avatar-border-color);

			rect {
				display: none;
			}
		}

		// Fixes
		.avatar {
			.privateChannels &,
			.members & {
				border: none;
				width: 36px;
			}
			&Stack > img {
				border: none;
			}
		}
	}

	// Messages
	.message.zalgo,
	.mesageGroupCozy,
	#search-results .message > div {
		--idk: -60px;
		min-height: unset;

		&.cozy .repliedMessage,
		.markup, .username {
			lnh();
		}
		&.compact {
			--idk: 47px;
			padding-left: calc(var(--chat-spacing) + var(--idk)) $i;
		}

		// Avatar in same line as name
		&.cozy {
			if (messages-alt) {
				& > .container {
					pad(0);
					margin: var(--avatar-spacing) 0 var(--avatar-spacing) var(--idk);
				}

				& > .contents > .header {
					margin-left: calc(var(--idk) + var(--avatar-spacing) + var(--avatar-size) * var(--line-height));
					min-height: unset;
					height: calc(var(--avatar-size) * var(--line-height));
					flex();

					& + .messageContent {
						margin-top: var(--avatar-spacing) $i;
					}
				}
				& > .contents > .messageContent {
					pad(left, 0);
					margin-left: var(--idk) $i;
				}
				&.mentioned > .contents > .messageContent {
					padding-left: calc(6px + 0.2rem) $i;
				}

				.avatar {
					mar(top, 0);
					box(calc(var(--avatar-size) * var(--line-height)));
				}

				.repliedMessage {
					--reply-spacing: 1ch;

					&::before {
						--spine-width: var(--border-width);
						--avatar-size: var(--font-size) $i;
						--gutter: calc(4ch + var(--border-width) + var(--font-size) / 2) $i;
						border-top-left-radius: var(--border-radius);
						mar(bottom, 0);
					}
				}
			} else {
				//padding-left: calc(var(--idk) * -1 - var(--chat-spacing) + 48px) $i;
			}
		}

		&.hasThread::after { // unsupported
			display: none;
		}

		// Timestamp
		.timestamp {
			line-height: 1;
			height: unset;
		}
		&.cozy:not(:hover) .header > .timestamp {
			display: none;
		}
		&.compact .timestamp {
			margin-right: 1ch $i;
			width: unset $i;

			&:not(:hover) {
				opacity: .5 $i;
			}
		}

		// Username
		.header span {
			mar(right, 0);
		}
		.username {
			&:not(:hover) {
				fg(2);
				filter: none;
			}

			// Output: 'that > .username::after'
			.repliedMessage > ^[1..-1]::after {
				content: var(--message-separator);
				display: inline-block;
				fg(2);
			}
		}

		// Separator
		.separator {
			fg(2);
			position: unset;
			opacity: unset;
			display: unset;
		}
		.username + .separator {
			replace-text(var(--message-separator), fg2);
		}
	}
	.repliedMessage {
		.username {
			opacity: 1;
			hide-chars(1, left);
		}
		.username,
		.replyAvatar {
			margin-right: 1ch;
		}
	}
	.emoji {
		box(var(--font-size));
		min-height: unset $i;
	}
	.message.groupStart::before {
		brd(bottom);
		top: calc(-1 * var(--f-msg-spacing) / 2 - var(--border-width));
	}
	.messagesWrapper .divider {
		--divider-color: var(--color9);
		height: calc(var(--font-size) * var(--line-height)) $i;

		& > .unreadPill {
			lnh();
		}
	}
	.attachment {
		pad();
		brd();

		.icon {
			mar(right);
		}
		.downloadWrapper {
			mar(right, 0);
		}
	}

	// Message textbox
	.form {
		brd(top);
		margin-right: calc(var(--scrollbar-width) + var(--right-spacing)) $i;

		& > :first-child > div {
			pad(right);
			brd();
			focus(focus-within);

			&::-webkit-scrollbar {
				display: none;
			}
		}
		& > :first-child > .attachedBars {
			border-radius: var(--border-radius) var(--border-radius) 0 0 $i;
			brd(bottom, 0);

			& + div {
				border-radius: 0 0 var(--border-radius) var(--border-radius) $i;
			}
		}
		textarea,
		.button {
			lnh();
		}
		textarea {
			pad();
		}
		.buttonWrapper {
			display: flex;
		}
		svg {
			box(var(--font-size));
		}
		.separator {
			brd(left);
			mar(left);

			&::before {
				display: none;
			}
		}
		.innerButton {
			pad();
			mar(0);
		}
	}
	.textArea,
	.attachButton,
	.form .buttons {
		height: 100%;
		min-height: unset;
	}
	.attachButton {
		pad();
		brd(right);
		width: unset;

		&Inner, &Inner > svg {
			height: var(--font-size);
		}
	}

	.autocompleteAttached {
		bottom: calc(100% - var(--border-width));
		shd(0);
	}
	#channel-attach {
		margin-left: -1px;
		margin-bottom: -8px;
		shd(0);
	}

	// Search results
	.search {
		&Header {
			bg();
			padding: 0 var(--pad);
			brd(bottom);
			height: var(--header-h);

			&TabList {
				gap: 0;
			}

			.item {
				lnh();
				pad();
				brd(0);
				mar(0);

				&:hover {
					bgc();
				}
			}
		}
		&Result {
			brd();
			mar(bottom);

			&Group {
				margin-bottom: calc(var(--pad) * 2);
			}
			&sWrap {
				brd(left);
				width: var(--search-results-width) $i;

				.scroller {
					pad(0);
				}
			}
		}
	}
	.pageControl {
		pad(0);

		&Container {
			mar(top);
		}
	}
	#search-results {
		pad();

		.channelName {
			normalise-header();

			&Icon {
				display: none;
			}
		}

		.message {
			pad(0);

			& > div {
				pad();
				padding-left: calc(var(--idk) * -1 + var(--pad)) $i;
			}
		}
		.avatar {
			left: var(--pad) $i;
		}
	}
	.highlight {
		hl();
	}

	// Revert Discord
	:root {
		--chat-spacing: var(--body-pad) $i;
		--right-spacing: var(--body-pad) $i;
	}
	.group-spacing {
		&-0 { --f-msg-spacing: var(--pad); }
		&-4 { --f-msg-spacing: calc(var(--pad) * 2); }
		&-8 { --f-msg-spacing: calc(var(--pad) * 4); }
		&-16 { --f-msg-spacing: calc(var(--pad) * 6); }
		&-24 { --f-msg-spacing: calc(var(--pad) * 8); }
	}

	/**
	 * etc.
	**/
	// Search
	.toolbar > .search {
		mar(0);
		order: -1;

		& > :not(.open) > div {
			width: 240px $i;
			anim();

			&:not(:hover) {
				background-color: transparent $i;
				width: 16px $i;
			}
		}

		[role="button"] > div {
			box(20px);
			stroke: var(--interactive-normal);

			svg {
				color: var(--interactive-normal) $i;
			}
		}
	}

	// Role background (stolen from gk)
	.roleRemoveIcon {
		position: absolute;
	}
	.role {
		overflow: hidden;
		background-color: transparent;
	}
	.roleCircle::after {
		content: '';
		position: relative;
