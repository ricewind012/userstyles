/* ==UserStyle==
@name           DuckDuckGo
@namespace      github.com/openstyles/stylus
@version        2.0.0
@description    A new userstyle
@author         Me

@preprocessor stylus

@var text     content-width "Content width"           480px

@var number   grid-items    "Grid items"              1
@var checkbox grid-fixed    "Fixed width for results" 0
@var text     grid-width    "Grid width"              300px

@var checkbox result-icon   "Links -> favicons"       1
@var checkbox result-hl     "Highlight word matches"  1
==/UserStyle== */

// Variables
vendors = official;
$small-screen = 768px;
$select-shadow = inset 0 1px 2px rgba(0, 0, 0, 0.1);
$select-size = 16px;
$i = !important;

// Stylus
svar(var) {
	s('var(--%s)', var);
}

cond(n, yes, no) {
	(n == 0 ? no : yes) $i;
}

sel-cond(sel, pos) {
	pos ? s('%s-%s', sel, pos) : sel;
}

color-a(n, bright = true) {
	s = bright ? -2 : null;
	n = n > 6 ? n - 8 : n;

	s('hsla(var(--color%s-h),	var(--color-s%s),	var(--color-l%s), var(--bg-opacity))', n, s, s);
}

// Appearance
bg(n =) {
	background-color: s('var(--bg%s)', n) $i;

	if (n == -tr || n == -tr2 || n == -tr3) {
		backdrop-filter: var(--popup-filter) $i;
	}
}

fg(n =) {
	color: s('var(--fg%s)', n) $i;
}

bgc(n1 =, n2 =) {
	bg(n1);
	fg(n2);
}

hl() {
	background-color: var(--hl) $i;
	color: var(--hl-fg) $i;
}

accent() {
	background-color: var(--accent) $i;
	color: var(--accent-fg) $i;
}

clr(n) {
	color: s('var(--color%s)', n) $i;
}

lnh() {
	line-height: var(--line-height) $i;
}

pad(pos =, n = 1) {
	{sel-cond(padding, pos)}: \
		(n == 0 ? 0 : pos == 0 ? 0 : var(--pad)) $i;
}

mar(pos =, n = 1) {
	{sel-cond(margin, pos)}: \
		(n == 0 ? 0 : pos == 0 ? 0 : var(--pad)) $i;
}

shd(n) {
	box-shadow: cond(n, s('var(--shadow-%s)', n), none);
}

rad(n = 1) {
	border-radius: cond(n, var(--border-radius), 0);
}

brd(pos =, color = border) {
	if (color) {
		color = svar(color);
	}

	{sel-cond(border, pos)}: \
		(color == 0 ? none : pos == 0 ? none : var(--border-width) solid color) $i;
	if (!pos) {
		rad(pos);
	}
}

// Position
box(w, h = w) {
	width: w $i;
	height: h $i;
}

flex(display = flex, alignment = center, justification =) {
	display: display $i;
	align-items: alignment $i;
	justify-content: justification $i;
}

// Animation
anim(name =, func = ) {
	@media (prefers-reduced-motion: no-preference) {
		{name ? animation : transition}: name var(--trans-dur) func $i;
	}
}

dropfade() {
	anim(dropfade, cubic-bezier(0.2, 0.9, 0.6, 1));
}

// Focus
focus(p = focus) {
	anim();

	&:{p} {
		border-color: var(--hl) $i;
		box-shadow: var(--shadow-ins) var(--hl) $i;
		outline: none $i;
	}
}

header-focus(class = page-focus) {
	.{class} & {
		--bg2: var(--accent);
		--fg: var(--accent-fg);
		--border: var(--accent-border);
	}

	// Stylus is unable to recognise :where()
	:root:not(:-moz-window-inactive) & {
		--bg2: var(--accent);
		--fg: var(--accent-fg);
		--border: var(--accent-border);
	}
}

// Text
replace-text(content =, text-color = fg, pos = after) {
	color: transparent $i;
	letter-spacing: -9999px $i;

	if (content) { // Replace
		&::{pos} {
			content: content $i;
			letter-spacing: 0 $i;
			color: svar(text-color) $i;
		}
	} else { // Hide
		* {
			letter-spacing: 0 $i;
			color: svar(text-color) $i;
		}
	}
}

hide-chars(amount, pos, bg =) {
	margin-{pos}: s('-%sch', amount) $i;
	position: relative $i;

	element = pos == left ? before : after;
	&::{element} {
		content: '' $i;
		position: absolute $i;
		inset: 0;
		box(s('%sch', amount), calc(1em * var(--line-height)));
		bg(bg);
	}
}

// Normalisation
disabled() {
	&:disabled {
		opacity: 0.5 $i;
		cursor: not-allowed $i;
	}
}

normalise-select() {
	appearance: none $i;
	bgc(2);
	lnh();
	background-image:
		linear-gradient(55deg, var(--bg2) 43%, transparent 45%),
		linear-gradient(125deg, transparent 53%, var(--bg2) 55%),
		linear-gradient(180deg, var(--bg2) 30%, var(--fg) 30%) $i;
	background-size: 20px 20px $i;
	background-repeat: no-repeat $i;
	background-position: right 50% $i;
	pad();
	padding-right: calc(var(--pad) + 20px) $i;
	brd();
	focus();
	disabled();
}

normalise-input() {
	bgc(2);
	lnh();
	pad();
	brd();
	focus();
	disabled();

	&::placeholder {
		fg(2);
	}
}

normalise-button() {
	bgc(2);
	lnh();
	background-image: none $i;
	padding: var(--pad) calc(var(--pad) * 2) $i;
	brd();
	cursor: pointer $i;
	focus();
	disabled();
}

normalise-color() {
	bg(2);
	pad(0);
	brd();
	box($select-size);
	focus();
	disabled();

	&::-webkit-color-swatch {
		brd(0);
		// Prevent from making it look like a radio input
		border-radius: calc(var(--border-radius) * 0.33) $i;

		&-wrapper {
			pad(0);
		}
	}
}

normalise-checkbox(label = true) {
	if (label) {
		/label {
			lnh();
			flex();
			gap: 1ch $i;
		}
	}

	appearance: none $i;
	bg(2);
	brd();
	// Prevent from making it look like a radio input
	border-radius: calc(var(--border-radius) * 0.33) $i;
	box-shadow: $select-shadow $i;
	mar(0);
	position: relative $i;
	box($select-size);
	min-width: $select-size $i;
	focus();

	&::before,
	&::after {
		content: '';
		position: absolute $i;
		inset: 0;
		background-color: var(--hl) $i;
		transform-origin: 0 0 $i;
	}
	&:disabled {
		&::before,
		&::after {
			background-color: var(--fg2) $i;
		}
	}

	&::before {
		transform: rotate(-45deg) translateY(45%) translateX(-30%) scaleX(0.25) scaleY(0) $i;
	}
	&:indeterminate::before {
		transform: rotate(0) translateY(37.5%) translateX(10%) scaleX(0.8) scaleY(0.25) $i;
		transition-duration: 33.3ms $i;
	}
	&::after {
		transform: rotate(225deg) translateY(-30%) translateX(-95%) scaleX(0.25) scaleY(0) $i;
	}

	&:checked {
		&::before {
			transform: rotate(-45deg) translateY(45%) translateX(-30%) scaleX(0.25) scaleY(0.4) $i;
			transition-duration: 33.3ms $i;
		}
		&::after {
			transform: rotate(225deg) translateY(-30%) translateX(-95%) scaleX(0.25) scaleY(1.2) $i;
			transition-delay: 33.3ms $i;
			anim();
		}
	}
}

normalise-radio() {
	appearance: none $i;
	bg(2);
	brd();
	border-radius: 50% $i;
	box-shadow: $select-shadow $i;
	mar(0);
	position: relative $i;
	box($select-size);
	focus();

	&::before {
		content: '';
		position: absolute $i;
		inset: $select-size / 5;
		background-color: var(--hl) $i;
		border-radius: 50% $i;
		transition: transform var(--trans-dur) linear $i;
		transform: scale(0) $i;
	}
	&:disabled::before {
		background-color: var(--fg2) $i;
	}
	&:checked::before {
		transition-timing-function: cubic-bezier(0, 0, 0.3, 1.5) $i;
		transform: scale(1) $i;
		anim();
	}
}

normalise-header(first = true) {
	fg();
	lnh();
	text-transform: uppercase $i;
	letter-spacing: 1px $i;
	pad(0);
	pad(bottom);
	brd(bottom);
	mar(0);
	mar(bottom);
	if (!first) {
		margin-top: calc(var(--pad) * 2) $i;
	}
}

@-moz-document domain("html.duckduckgo.com") {
	/**
	 * Variables
	**/
	:root {
		--reserve-bg: var(--bg);
		--reserve-fg: var(--fg);
		--reserve-fg2: var(--fg2);
		--reserve-border: var(--border);
		--pad-save: var(--pad);
	}

	// Settings
	body {
		--max-content-width: content-width;
		--grid-items: 100% / grid-items;
		--grid-width: grid-width;
	}

	/**
	 * Global
	**/
	.body--html {
		bgc();
		lnh();
	}
	a {
		color: var(--fg-link) $i;

		&:not(:hover) {
			text-decoration: none;
		}
	}
	input,
	select,
	textarea {
		fg();
	}

	/**
	 * Hide elements
	**/
	.header__logo-wrap,
	.search__button,
	.feedback-btn,
	.result--ad {
		display: none $i;
	}

	/**
	 * Header
	**/
	#header {
		--pad: calc(var(--pad-save) / 2);
		bg(2);
		header-focus();
		pad();
		brd(bottom);
		height: var(--header-h);
		display: flex;
		position: fixed;
		z-index: 1;
	}
	.header__form {
		// Don't get me affected by header-focus()
		--bg: var(--reserve-bg);
		--fg: var(--reserve-fg);
		--border: var(--reserve-border);
		text-align: center;
		pad(left, 0);
		margin: unset;
		width: 100%;
		display: flex;
		gap: var(--pad);
	}
	.search {
		background-color: transparent $i;
		pad(0);
		brd(0);
		shd(0);

		&--header {
			mar(bottom);
			box(unset);
			flex-grow: 1;
		}
		&__input {
			normalise-input();
			top: 0;
			box(
				calc(100% - var(--pad) * 2 - var(--border-width) * 2),
				calc(var(--font-size) * var(--line-height) - var(--border-width) * 2)
			);

			.header & {
				--bg2: var(--bg);
			}
		}
	}
	.frm__select {
		all: unset;
		display: inline-flex;
		width: auto;

		&::after {
			display: none;
		}

		&:hover {
			bg(2);
		}

		select {
			normalise-select();
			--bg2: var(--bg);
		}
	}

	/**
	 * Content
	**/
	.serp__results {
		padding: var(--body-pad) $i;
		padding-top: calc(var(--header-h) + var(--body-pad)) $i;
		margin: auto;
		max-width: var(--max-content-width);
	}
	.msg {
		fg();
		text-align: center;
		pad(0);
		mar(0);
		margin-bottom: calc(var(--body-pad) - var(--pad)) $i;
		width: 100%;

		b {
			&::before,
			&::after {
				content: '"';
			}
		}
		a {
			color: var(--fg-link);
		}
	}
	.zci {
		pad(0);
		margin: auto;
		width: var(--max-content-width);

		&-wrapper {
			bg(2);
			lnh();
			padding: var(--pad) 0;
			brd(bottom);
		}
		&__heading {
			fg();
			text-align: center;
			pad(bottom);
		}
		&__image {
			padding-left: calc(var(--pad) * 2);
			pad(bottom);
		}
	}
	.result {
		brd();
		mar(bottom, 0);

		&,
		&:hover {
			bg(2);
		}

		&s {
			pad(0);
			mar(0);
			display: flex;
			flex-direction: grid-items > 1 ? row : column;
			gap: var(--pad);
		}
		&__body {
			pad();
		}
		&__a,
		&__extras,
		&__icon,
		&__snippet {
			mar(0);
		}
		&__title {
			normalise-header();
		}
		&__a {
			fg();
			lnh();

			&::before {
				content: '';
				position: absolute;
				inset: 0;
				z-index: 1;
			}
		}
		&__icon,
		&__icon__img {
			vertical-align: unset;
			box(var(--font-size));
			max-width: unset $i;
		}
		&__type {
			bgc(2, 2);
			lnh();
			pad(0);
			mar(0);
			position: absolute;
			top: var(--pad);
			right: var(--pad);
			vertical-align: unset;
		}
		&__snippet {
			lnh();
			display: block;

			&,
			&:hover,
			& > b,
			& > strong {
				fg();
			}

			if (result-hl) {
				b,
				strong {
					hl();
				}
			}
		}
		&__extras + .clear::before {
			content: 'No description';
		}

		// Breaks if line height > 1.25
		if (result-icon) {
			&__a {
				width: calc(100% - var(--font-size) - 1ch);

				&[href*=".pdf"] {
					width: calc(100% - var(--font-size) - 5ch - 3px);
				}
			}
			&__type {
				right: calc(var(--pad) + var(--font-size) + 1ch);
			}
			&__icon {
				position: absolute;
				top: calc(
					var(--pad) * -2 - var(--font-size) * var(--line-height) \
					+ var(--border-width)
				);
				right: 0;
			}
			&__url {
				display: none;
			}
		} else {
			&__snippet {
				mar(top);
			}
			&__a:has(> &__type) {
				width: calc(100% - 4ch - 3px);
			}
		}
	}
	.nav-link {
		pad(left, 0);
		width: 100%;
	}
	.btn {
		normalise-button();

		&:hover,
		&:focus {
			bgc(2);
		}
	}

	if (grid-items > 1) {
		.serp__results {
			margin: unset;
			max-width: unset;
		}
		.nav-link {
			text-align: center;
		}
		.result {
			width: grid-fixed \
				? var(--grid-width) \
				: calc(var(--grid-items) - var(--pad));

			&s {
				justify-content: center;
				flex-wrap: wrap;
			}
		}
	}
}

