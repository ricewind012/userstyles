// Hide elements
// I. Unsorted
#browser.native:not(.tabs-top):not(.horizontal-menu):not(.minimal-ui) #header, // Non-top tabs header
.webpageview[style^="visibility: hidden"],
.panel input[type="search"] + div, // ..next to search bar
.tab-strip::-webkit-scrollbar, // Tab overflow scrollbar

// II. URL bar
.toolbar-insideinput, // Adblocker
.SiteInfoButton,
.BookmarkButton {
  display: none $i;
}

// III. Browser menu (accessible with Alt)
.vivaldi-horizontal-icon,
.vivaldi {
	display: none $i;
}
#tabs-container.top {
	pad(left, 0);
}

// IV. Popup
#browser.popup {
	#tabs-tabbar-container,
	#panels-container,
	.mainbar {
		display: none $i;
	}
}

// IV. Sync and email partnership
/*.settings-navigation .tree-item {
